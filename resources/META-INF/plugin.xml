<idea-plugin version="2">
    <id>me.fingerart.idea.apidebugger</id>
    <name>Api Debugger</name>
    <version>2.0.0</version>
    <vendor email="fingerart.me@gmail.com" url="http://fingerart.me?f=idea">FingerArt</vendor>

    <description><![CDATA[
        A plug-in used to debug network interface for IntlliJ IDEA.
    ]]></description>

    <change-notes><![CDATA[
        v2.0.0 Upgrade:
        <br/>
        -
        <br/>
        v1.0.0 Add:
        <br/>
        - Support GET、POST method;
        - Support param、cookie、header、file addition.
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow id="Api Debugger" icon="/image/favicon.png" anchor="right"
                    factoryClass="me.fingerart.idea.ui.window.MainWindow"/>
    </extensions>

    <project-components>
        <component>
            <implementation-class>me.fingerart.idea.engine.component.StateProjectComponent</implementation-class>
        </component>
    </project-components>

</idea-plugin>